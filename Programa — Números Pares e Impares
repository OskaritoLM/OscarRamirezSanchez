#include <stdio.h>

int main() {
    int nums[10];
    int pares = 0, impares = 0;

    printf("Ingrese 10 números enteros:\n");
    for (int i = 0; i < 10; i++) {
        printf("Número %d: ", i + 1);
        if (scanf("%d", &nums[i]) != 1) {
            printf("Entrada inválida.\n");
            return 1;
        }
    }

    printf("\nResultados:\n");
    for (int i = 0; i < 10; i++) {
        if (nums[i] % 2 == 0) {
            printf("El número %d es par\n", nums[i]);
            pares++;
        } else {
            printf("El número %d es impar\n", nums[i]);
            impares++;
        }
    }

    printf("\nCantidad de pares: %d\n", pares);
    printf("Cantidad de impares: %d\n", impares);

    return 0;
}
