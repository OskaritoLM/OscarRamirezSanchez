#include <stdio.h>

int main() {
    int n;

    printf("Ingrese un número entero de 4 dígitos: ");
    if (scanf("%d", &n) != 1) {
        printf("Entrada inválida.\n");
        return 1;
    }

    if (n < 1000 || n > 9999) {
        printf("Error: el número debe tener exactamente 4 dígitos (1000-9999).\n");
        return 1;
    }

    int dig1 = n / 1000;             // millares
    int dig2 = (n % 1000) / 100;     // centenas
    int dig3 = (n % 100) / 10;       // decenas
    int dig4 = n % 10;               // unidades

    int invertido = dig4 * 1000 + dig3 * 100 + dig2 * 10 + dig1;
    printf("El número al revés es: %d\n", invertido);

    return 0;
}
